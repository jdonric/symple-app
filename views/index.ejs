        <style>
        body {
    font-family: 'Work sans', sans-serif;
    margin:0;
    font-weight: lighter;
    background-size: cover;
    background-color: #f876de;
    background-image: linear-gradient(315deg, #f4791f 0%,#659999 74%);

}

h1 {
    font-size: 82px;
    font-family: 'Work Sans', sans-serif;
    font-weight: lighter;
    top: 2.5;
    position: relative;
    letter-spacing: 14px;
    color:  whitesmoke;
    
}

iframe {
    margin: -8px;
}

.mood-container {
    width: 100%;
    margin: auto;
    display: auto;

}

/* Slides */
.mood {
    display: none;
    padding: 35px;
    text-align: center;
    -webkit-transition: display 2s ease;
    transition: display 2s ease;
  }
  
  /* Next & previous buttons */
  .left-arrow, .right-arrow {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: 20px;
    height: 20px;
    margin-top: -30px;
    padding: 2.5%;
    color: #888;
    font-weight: bold;
    font-size: 20px;
    border-radius: 50%;
    user-select: none;
  }

  .left-arrow {
      left: 10;
      font-family: 'Work Sans', sans-serif;
    font-weight: lighter;
  }
  
  /* Position the "next button" to the right */
  .right-arrow {
    position: absolute;
    right: 10;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    font-family: 'Work Sans', sans-serif;
    font-weight: lighter;
  }
  
  /* On hover, add a black background color with a little bit see-through */
  .left-arrow:hover, .right-arrow:hover {
    background-color: rgba(0,0,0,0.8);
    color: white;
    transition: background-color 0.8s ease;
  }
  
  /* The dot/bullet/indicator container */
  .dot-container {
      text-align: center;
      padding-bottom: 2.5%;
      padding-top: 2%;

      bottom: 0;
      width: 100%;
      position:absolute;
  }
  
  /* The dots/bullets/indicators */
  .dot {
    cursor: pointer;
    height: 22px;
    width: 22px;
    margin: 0 5px;
    background-color: #bbb;
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.8s ease;
  }

 dot:hover,  .active{
          background-color: lightslategray !important;
  }

  

  
  

  footer {
      font-size: 11px;
    text-align: left;
    left: 25;
    position: absolute;
  }
  
  a:link {
    color: lightgrey;

  }

  a:hover {
    cursor: pointer;
    color: peachpuff;
  }

  a:visited {
    color:whitesmoke;
  }
 






